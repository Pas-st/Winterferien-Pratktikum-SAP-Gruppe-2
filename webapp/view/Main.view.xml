<mvc:View
    controllerName="my.app.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <SplitContainer id="mainSplit">

        <!-- LINKES MENÜ -->
        <masterPages>
            <Page title="Finanzübersicht">
                <List 
                    mode="SingleSelectMaster" 
                    selectionChange="onMenuSelect">

                    <StandardListItem 
                        title="Dashboard" 
                        type="Inactive"
                        icon="sap-icon://home" />

                    <StandardListItem 
                        title="Transaktionen" 
                        type="Inactive"
                        icon="sap-icon://payment-approval" />
                                 

                    <StandardListItem 
                        title="Berichte" 
                        type="Inactive"
                        icon="sap-icon://business-objects-experience" />

                    <StandardListItem 
                        title="Einstellungen" 
                        type="Inactive"
                        icon="sap-icon://action-settings" />
                </List>
            </Page>
        </masterPages>

        <!-- RECHTER INHALT -->
        <detailPages>
            <Page title="Main View" showHeader="true">
                <headerContent>
                    <Image src="images/SAP_Logo.svg" alt="Logo" />
                </headerContent>
                <content>
                    <Button text="Zur Second View" press="onGoSecond"/>
                    <Button text="Zur Third View" press="onGoThird"/>
                </content>
            </Page>
        </detailPages>

    </SplitContainer>

</mvc:View>