<mvc:View
    controllerName="my.app.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <SplitContainer id="mainSplit">

        <!-- LINKES MENÜ -->
        <masterPages>
            <Page title="Finanzübersicht">
                <List mode="SingleSelectMaster" select="onMenuSelect">
                    <StandardListItem title="Dashboard" type="Active" />
                    <StandardListItem title="Transaktionen" type="Active" />
                    <StandardListItem title="Berichte" type="Active" />
                </List>
            </Page>
        </masterPages>

        <!-- RECHTER INHALT -->
        <detailPages>
            <Page title="Main View">
                <content>
                    <Button text="Zur Second View" press="onGoSecond"/>
                    <Button text="Zur Third View" press="onGoThird"/>
                </content>
            </Page>
        </detailPages>

    </SplitContainer>

</mvc:View>