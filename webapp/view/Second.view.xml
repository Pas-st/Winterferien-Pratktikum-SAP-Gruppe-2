<mvc:View
    controllerName="my.app.controller.Second"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    


    <SplitContainer id="secondSplit">

        <!-- LINKES MENÜ -->
        <masterPages>
            <Page title="Aureus">
                <List 
                    mode="SingleSelectMaster" 
                    selectionChange="onMenuSelect">

                    <StandardListItem 
                        title="Dashboard" 
                        type="Inactive"
                        icon="sap-icon://home" />

                    <StandardListItem 
                        title="Transaktionen" 
                        type="Inactive"
                        icon="sap-icon://payment-approval" />
                                 

                    <StandardListItem 
                        title="Berichte" 
                        type="Inactive"
                        icon="sap-icon://business-objects-experience" />

                    <StandardListItem 
                        title="Einstellungen" 
                        type="Inactive"
                        icon="sap-icon://action-settings" />
                </List>
            </Page>
        </masterPages>

        <detailPages>
           <Page title="Finanzübersicht" showHeader="true">
                <headerContent>
                    <Image src="images/SAP_Logo.svg" alt="Logo" />
                </headerContent>
                <content>

                    <Button
                        text="Eintrag hinzufügen"
                        press="onAddEntry"
                        type="Emphasized"
                        class="sapUiSmallMarginBottom"/>

                    <Table
                        id="entryTable"
                        items="{/entries}">

                        <columns>
                            <Column><Text text="Datum"/></Column>
                            <Column><Text text="Betrag (€)"/></Column>
                            <Column><Text text="Einnahme/Ausgabe"/></Column>
                            <Column><Text text="Beschreibung"/></Column>
                            <Column width="5rem"/>
                        </columns>

                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{date}"/>
                                    <Text text="{amount}"/>
                                    <Text text="{type}"/>
                                    <Text text="{description}"/>

                                    <HBox>
                                        <Button
                                            icon="sap-icon://decline"
                                            type="Transparent"
                                            press="onDeleteEntry"/>
                                        <Button
                                            icon="sap-icon://edit"
                                            type="Transparent"
                                            press="onEditEntry"/>
                                    </HBox>
                                </cells>
                            </ColumnListItem>
                        </items>

                    </Table>


                </content>
            </Page>
        </detailPages>
    </SplitContainer>
</mvc:View>
