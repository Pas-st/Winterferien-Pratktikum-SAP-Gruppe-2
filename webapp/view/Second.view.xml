<mvc:View
    controllerName="my.app.controller.Second"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <SplitContainer id="secondSplit">
        <masterPages>
            <Page title="Aureus">
                <List 
                    mode="SingleSelectMaster" 
                    selectionChange="onMenuSelect">

                    <StandardListItem 
                        title="Dashboard" 
                        type="Inactive"
                        icon="sap-icon://home" />

                    <StandardListItem 
                        title="Transaktionen" 
                        type="Inactive"
                        icon="sap-icon://payment-approval" />

                    <StandardListItem 
                        title="Berichte" 
                        type="Inactive"
                        icon="sap-icon://business-objects-experience" />

                    <StandardListItem 
                        title="Einstellungen" 
                        type="Inactive"
                        icon="sap-icon://action-settings" />
                </List>
            </Page>
        </masterPages>

        <detailPages>
            <Page title="Finanzübersicht" showHeader="true">
                
                <!-- FILTER OBEN RECHTS -->
                <headerContent>
                    <Select id="sortSelect" change="onSortChange" width="12rem">
                        <core:Item key="UP" text="Datum Aufsteigend"/>
                        <core:Item key="DOWN" text="Datum Absteigend"/>
                    </Select>
                    <Select
                        id="typeFilter"
                        width="10rem"
                        selectedKey="ALL"
                        change="onFilterChange">
                        <items>
                            <core:Item key="ALL" text="Alle"/>
                            <core:Item key="IN" text="Einnahmen"/>
                            <core:Item key="OUT" text="Ausgaben"/>
                        </items>
                    </Select>
                    <Image src="images/SAP_Logo.svg" alt="Logo" />
                </headerContent>

                <content>
                    <Button
                        text="Eintrag hinzufügen"
                        press="onAddEntry"
                        type="Emphasized"
                        class="sapUiSmallMarginBottom"/>

                    <Table
                        id="entryTable"
                        items="{/entries}">
                        
                        <columns>
                            <Column sortProperty="date" sortIndicator="None" press="onSortDate">
                                <header>
                                    <Text text="Datum"/>
                                </header>
                            </Column>
                            <Column>
                                <header><Text text="Betrag (€)"/></header>
                            </Column>
                            <Column>
                                <header><Text text="Einnahme/Ausgabe"/></header>
                            </Column>
                            <Column>
                                <header><Text text="Beschreibung"/></header>
                            </Column>
                            <Column width="5rem"/>
                        </columns>

                        <items>
                            <ColumnListItem>
                                <cells>
                                    <Text text="{date}"/>
                                    <Text text="{amount}"/>
                                    <Text text="{type}"/>
                                    <Text text="{description}"/>
                                    <HBox>
                                        <Button
                                            icon="sap-icon://decline"
                                            type="Transparent"
                                            press="onDeleteEntry"/>
                                        <Button
                                            icon="sap-icon://edit"
                                            type="Transparent"
                                            press="onEditEntry"/>
                                    </HBox>
                                </cells>
                            </ColumnListItem>
                        </items>

                    </Table>
                </content>
            </Page>
        </detailPages>
    </SplitContainer>
</mvc:View>
