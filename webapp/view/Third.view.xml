<mvc:View
    controllerName="my.app.controller.Third"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <SplitContainer id="thirdSplit">

        <!-- LINKES MENÜ -->
        <masterPages>
            <Page title="Finanzübersicht">
                <List 
                    mode="SingleSelectMaster" 
                    selectionChange="onMenuSelect">

                    <StandardListItem 
                        title="Dashboard" 
                        type="Inactive"
                        icon="sap-icon://home" />

                    <StandardListItem 
                        title="Transaktionen" 
                        type="Inactive"
                        icon="sap-icon://payment-approval" />
                                 

                    <StandardListItem 
                        title="Berichte" 
                        type="Inactive"
                        icon="sap-icon://business-objects-experience" />

                    <StandardListItem 
                        title="Einstellungen" 
                        type="Inactive"
                        icon="sap-icon://action-settings" />
                </List>
            </Page>
        </masterPages>

        <detailPages>
            <Page title="Berichte" showHeader="true">
                <headerContent>
                    <Image src="images/SAP_Logo.svg" alt="Logo" />
                </headerContent>

                <content>

                    <HBox width="100%" justifyContent="Center">
                        <VBox width="50%" height="400px">
                            <core:HTML id="chartContainer1" />
                        </VBox>
                        <VBox width="50%" height="400px">
                            <core:HTML id="chartContainer2" />
                        </VBox>
                    </HBox>

                </content>
            </Page>
        </detailPages>

    </SplitContainer>

</mvc:View>