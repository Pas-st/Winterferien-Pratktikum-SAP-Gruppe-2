<mvc:View
    controllerName="my.app.controller.Third"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <SplitContainer id="thirdSplit">

        <!-- LINKES MENÜ -->
        <masterPages>
            <Page title="Finanzübersicht">
                <List 
                    mode="SingleSelectMaster" 
                    selectionChange="onMenuSelect">

                    <StandardListItem 
                        title="Dashboard" 
                        type="Inactive"
                        icon="sap-icon://home" />

                    <StandardListItem 
                        title="Transaktionen" 
                        type="Inactive"
                        icon="sap-icon://payment-approval" />
                                 

                    <StandardListItem 
                        title="Berichte" 
                        type="Inactive"
                        icon="sap-icon://business-objects-experience" />

                    <StandardListItem 
                        title="Einstellungen" 
                        type="Inactive"
                        icon="sap-icon://action-settings" />
                </List>
            </Page>
        </masterPages>

        <detailPages>
            <Page title="Berichte" showHeader="true">
                <headerContent>
                    <Image src="images/SAP_Logo.svg" alt="Logo" />
                </headerContent>

                <content>

                    <!-- ⭐ SUMMENBOX ⭐ -->
                    <VBox width="90%" class="summaryOuterBox" alignItems="Center">
                        <HBox width="100%" justifyContent="SpaceAround">

                            <!-- AUSGABEN -->
                            <VBox width="45%" alignItems="Center">
                                <Text id="txtTotalAusgaben" text="Ausgaben: 0 €" class="sapUiSmallMarginBottom sapUiBold" />
                                <Text id="txtWeeklyAusgaben" text="Wöchentliche Ausgaben: 0 €" />
                            </VBox>

                            <!-- EINNAHMEN -->
                            <VBox width="45%" alignItems="Center">
                                <Text id="txtTotalEinnahmen" text="Einnahmen: 0 €" class="sapUiSmallMarginBottom sapUiBold" />
                                <Text id="txtWeeklyEinnahmen" text="Wöchentliche Einnahmen: 0 €" />
                            </VBox>

                        </HBox>
                    </VBox>

                    <!-- ⭐ PIE CHARTS ⭐ -->
                    <HBox width="100%" justifyContent="Center">
                        <VBox width="50%" height="400px">
                            <core:HTML id="chartContainer1" />
                        </VBox>
                        <VBox width="50%" height="400px">
                            <core:HTML id="chartContainer2" />
                        </VBox>
                    </HBox>

                    <!-- ⭐ LINE CHART (Zeit-Geld) ⭐ -->
                    <VBox width="100%" height="400px" class="paddingBetweenCharts">
                        <core:HTML id="lineChartContainer" />
                    </VBox>

                </content>
            </Page>
        </detailPages>

    </SplitContainer>

</mvc:View>