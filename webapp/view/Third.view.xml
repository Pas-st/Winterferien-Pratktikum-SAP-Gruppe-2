<mvc:View
    controllerName="my.app.controller.Third"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"> <!-- WICHTIG: Erlaubt der View, die volle Höhe einzunehmen -->

    <SplitContainer id="thirdSplit">
        <masterPages>
            <Page title="Finanzübersicht">
                <!-- Hinweis: sap.m.ListMode.SingleSelect ist veraltet, nutzen Sie SingleSelectMaster -->
                <List mode="SingleSelectMaster" select="onMenuSelect">
                    <StandardListItem title="Dashboard" type="Active" />
                    <StandardListItem title="Transaktionen" type="Active" />
                    <StandardListItem title="Berichte" type="Active" />
                </List>
            </Page>
        </masterPages>

        <detailPages>
            <Page title="Berichte">
                <content>
                    <!-- HBox als Container für die Diagramme -->
                    <HBox width="100%" justifyContent="Center" class="sapUiSmallMarginTop">
                        <items>
                            <!-- Erster Chart-Container -->
                            <VBox width="50%" height="500px" class="sapUiSmallMarginEnd">
                                <layoutData>
                                    <FlexItemData growFactor="1" /> 
                                </layoutData>
                                <!-- core:HTML benötigt oft einen Inhalts-String mit 100% Größe -->
                                <core:HTML id="chartContainer1" content='&lt;div style="height:100%; width:100%;"&gt;&lt;/div&gt;' />
                            </VBox>

                            <!-- Zweiter Chart-Container -->
                            <VBox width="50%" height="500px">
                                <layoutData>
                                    <FlexItemData growFactor="1" />
                                </layoutData>
                                <core:HTML id="chartContainer2" content='&lt;div style="height:100%; width:100%;"&gt;&lt;/div&gt;' />
                            </VBox>
                        </items>
                    </HBox>
                </content>
            </Page>
        </detailPages>
    </SplitContainer>
</mvc:View>