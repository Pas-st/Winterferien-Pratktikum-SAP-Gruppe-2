<mvc:View
    controllerName="my.app.controller.Third"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <SplitContainer id="thirdSplit">

        <masterPages>
            <Page title="Finanzübersicht">
                <List mode="SingleSelectMaster" select="onMenuSelect">
                    <StandardListItem title="Dashboard" type="Active" />
                    <StandardListItem title="Transaktionen" type="Active" />
                    <StandardListItem title="Berichte" type="Active" />
                </List>
            </Page>
        </masterPages>

        <detailPages>
            <Page title="Berichte">
                <content>

                    <!-- ⭐ SCHICKE BOX UM DIE SUMMEN ⭐ -->
                    <VBox width="90%" class="summaryOuterBox" alignItems="Center">
                        <HBox width="100%" justifyContent="SpaceAround">

                            <VBox width="45%" alignItems="Center">
                                <Text id="txtTotalAusgaben" text="Ausgaben: 0 €" design="Bold" />
                            </VBox>

                            <VBox width="45%" alignItems="Center">
                                <Text id="txtTotalEinnahmen" text="Einnahmen: 0 €" design="Bold" />
                            </VBox>

                        </HBox>
                    </VBox>

                    <!-- DEINE CHARTS -->
                    <HBox width="100%" justifyContent="Center">
                        <VBox width="50%" height="400px">
                            <core:HTML id="chartContainer1" />
                        </VBox>
                        <VBox width="50%" height="400px">
                            <core:HTML id="chartContainer2" />
                        </VBox>
                    </HBox>

                </content>
            </Page>
        </detailPages>

    </SplitContainer>

</mvc:View>